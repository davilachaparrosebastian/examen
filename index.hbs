{{>header}}
<div class="container">
<h1>Pintores</h1>
{{#if pintores}}
<table class="table table-dark table-hover">
<thead>
<tr>
<td>ID</td>
<td>nombre</td>
<td>nacionalidad</td>
<td>corriente</td>
<td>imagen</td>
</tr>
</thead>
<tbody>
    {{#each pintores}}
    <tr>
        <td>{{ _id }}</td>
        <td>{{nombre }}</td>
        <td>{{ Nacionalidad }}</td>
        <td>{{ corriente }}</td> 
        <td><img src="../images/{{ pintura }}"/></td>
    </tr>
    {{/each}}
</tbody>
{{else}}
<div>No pintores</div>
{{if}}
</div>
{{>footer}}
